<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newMeasurement"
        android:layout_width="316dp"
        android:layout_height="59dp"
        android:layout_marginTop="92dp"
        android:text="@string/newMeasurement"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/showAllMeasurementsButton"
        app:layout_constraintTop_toTopOf="@id/showAllMeasurementsButton"
        tools:text="@string/newMeasurement"
        tools:visibility="visible" />

    <Button
        android:id="@+id/showAllMeasurementsButton"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="52dp"
        android:background="#FFFFFF"
        android:text="@string/showAllMeasurements"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/showAllMeasurements"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>